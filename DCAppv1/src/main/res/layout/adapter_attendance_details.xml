<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1234556" />

            <TextView
                android:id="@+id/text_amQianDao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="456789132" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp" />

            <TextView
                android:id="@+id/text_amQianTui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="456789132" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_sEarlyRetreat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_sLate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_sOffLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_sAbsenteeism"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_sTransboundary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_pmQianDao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="456789132" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp" />

            <TextView
                android:id="@+id/text_pmQianTui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="456789132" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_pEarlyRetreat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_pLate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_pOffLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_pAbsenteeism"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

            <Space
                android:layout_width="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/text_pTransboundary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/colorGray" />
</LinearLayout>