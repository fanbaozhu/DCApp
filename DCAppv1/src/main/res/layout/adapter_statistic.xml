<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_status"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_green_round_rect_20dp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/truck_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/text_status"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/text_status"
        android:layout_toRightOf="@id/text_status"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_scan_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/text_status"
        android:layout_alignLeft="@id/truck_number"
        android:layout_alignStart="@id/truck_number"
        android:layout_marginTop="8dp"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_status"
        android:layout_marginTop="4dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/text_address"
        android:layout_marginTop="8dp"
        android:background="@color/colorGray" />
</RelativeLayout>