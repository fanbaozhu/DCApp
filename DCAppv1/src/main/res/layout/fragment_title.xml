<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorBlue"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_title_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="8dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_title_back" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="标题"
        android:textColor="@color/colorWhite"
        android:textSize="22sp" />

    <EditText
        android:id="@+id/edit_title_content"
        android:layout_width="240dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_blue_round_line_4dp"
        android:hint="搜索"
        android:inputType="text"
        android:paddingEnd="8dp"
        android:textSize="14sp"
        android:visibility="gone"
        android:paddingStart="8dp" />

    <ImageView
        android:id="@+id/image_title_confirm"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="end"
        android:layout_margin="8dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_title_confirm" />

</FrameLayout>